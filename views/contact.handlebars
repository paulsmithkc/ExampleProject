<main class="container">
  <form id="contact-form" method="POST" action="/contact">
    <h1>Contact Form</h1>
    <div class="form-group">
      <label for="name">Your Name</label>
      <input id="name" name="name" type="text" class="form-control" value="{{name}}">
      <div class="text-danger">{{nameError}}</div>
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea id="message" name="message" type="text" class="form-control" value="{{message}}"></textarea>
      <div class="text-danger">{{messageError}}</div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Send</button>
    </div>
    <div class="form-group">
      {{#if isValid}}
      <output class="text-success">
        {{result}}
      </output>
      {{else}}
      <output class="text-danger">
        {{result}}
      </output>
      {{/if}}
    </div>
  </form>
</main>